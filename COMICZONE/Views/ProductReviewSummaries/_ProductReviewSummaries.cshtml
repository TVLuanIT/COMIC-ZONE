@model COMICZONE.Models.ProductReviewSummary

@{
    var rounded = Math.Round(Model.Averagerating);
}

<div class="review-summary-card">

    <div class="summary-main">
        <div class="rating-number">
            @Model.Averagerating.ToString("0.0")
            <span>/5</span>
        </div>

        <div class="rating-stars">
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= rounded)
                {
                    <span class="star filled">&#9733;</span>
                }
                else
                {
                    <span class="star">&#9733;</span>
                }
            }
        </div>

        <div class="review-count">
            @Model.Totalreview đánh giá
        </div>
    </div>

    @if (Model.Lastupdated.HasValue)
    {
        <div class="summary-update">
            Cập nhật:
            @Model.Lastupdated.Value.ToString("dd/MM/yyyy HH:mm")
        </div>
    }

</div>