@model IDictionary<string, List<string>>

<div class="sidebar p-3 border rounded bg-light">
    @if (Model != null && Model.Any())
    {
        foreach (var filterGroup in Model)
        {
            var collapseId = "collapse-" + filterGroup.Key.Replace(" ", "").ToLower();

            <div class="mb-3">
                <h5 class="filter-title">
                    <a data-bs-toggle="collapse"
                       href="#@collapseId"
                       role="button"
                       aria-expanded="true"
                       aria-controls="@collapseId">
                        <span>@filterGroup.Key</span>
                        <i class="bi bi-chevron-down ms-2"></i>
                    </a>
                </h5>

                <ul class="list-unstyled collapse show filter-list" id="@collapseId">
                    @foreach (var item in filterGroup.Value)
                    {
                        <li>
                            <a class="filter-item"
                               href="@Url.Action("Index", "Products", new { keyword = item })">
                                @item
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Không có bộ lọc nào.</p>
    }
</div>