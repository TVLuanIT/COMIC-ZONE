<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COMICZONE</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/COMICZONE.styles.css" asp-append-version="true" />
</head>

<body style="font-family: 'Poppins', sans-serif;">

    <!-- HEADER / NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm fixed-top">
            <div class="container">
                <!-- Logo -->
                <div class="d-flex align-items-center">
                    <img src="~/images/logo-nobg.png"
                         asp-append-version="true"
                         alt="ComicZone Logo"
                         style="height:40px; width:auto; margin-right:10px;" />
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        COMIC<span class="text-danger">ZONE</span>
                    </a>
                </div>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            @await Component.InvokeAsync("NavCategories")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index" >Thể loại</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Giỏ hàng
                            </a>
                        </li>
                    </ul>
					<!-- Search Form -->
                    <form class="d-flex my-3" asp-controller="Products" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="keyword"
                               placeholder="Tìm truyện...">
                        <button class="btn" type="submit">🔍</button>
                    </form>
                    <!-- Login / Register -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-light mt-5 border-top border-warning">
        <div class="container py-5">
            <div class="row text-center text-md-start">

                <!-- Brand -->
                <div class="col-md-4 mb-3">
                    <div class="d-flex align-items-center">
                        <img src="~/images/logo.png"
                             asp-append-version="true"
                             alt="ComicZone Logo"
                             style="height:40px; width:auto; margin-right:10px;" />

                        <h5 class="fw-bold text-warning mb-0">COMICZONE</h5>
                    </div>

                    <p class="small mb-0 mt-2">
                        Cửa hàng truyện tranh Nhật Bản
                    </p>
                </div>

                <!-- Links -->
                <!-- Links -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Liên kết</h6>
                    <div class="mt-2">
                        <!-- Facebook -->
                        <a href="https://www.facebook.com/@@just.a.gamer.2023" target="_blank" class="text-light me-3">
                            <i class="bi bi-facebook"></i>
                        </a>

                        <!-- TikTok -->
                        <a href="https://www.tiktok.com/@@gbasestorevn?is_from_webapp=1&sender_device=pc" target="_blank" class="text-light me-3">
                            <i class="bi bi-tiktok"></i>
                        </a>

                        <!-- YouTube -->
                        <a href="https://www.youtube.com/channel/UCeOJyLQaRLoWmP_VesgAutQ/" target="_blank" class="text-light">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>
                </div>

                <!-- Contact -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Liên hệ</h6>
                    <!-- Email -->
                    <p class="small mb-1">
                        📧
                        <a href="mailto:luan31032004@gmail.com" class="text-light text-decoration-none">
                            luan31032004@gmail.com
                        </a>
                    </p>
                    <!-- Phone -->
                    <p class="small mb-0">📞 0373801713</p>
                </div>

            </div>

            <hr class="border-secondary">

            <div class="text-center small">
                &copy; 2026 COMICZONE. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>